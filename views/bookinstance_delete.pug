extends layout

block content
  h1= title
  
  p #[strong Title: ] #{bookinstance.book.title}
  p #[strong Imprint: ] #{bookinstance.imprint}
  p #[strong Status: ] #{bookinstance.status}
  p #[strong Are you sure you want to delete this book copy?]

  form(method='POST')
    div.form-group
      input#bookinstanceid.form-control(type='hidden', name='bookinstanceid', value=bookinstance._id)
    
    button.btn.btn-primary(type='submit') Delete
    a.btn.btn-secondary(href=bookinstance.url) Cancel
